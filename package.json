{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "dependencies": {
    "jquery.background-parallax-scroll": "^3.0.6",
    "jquery.smoothscroll": "^1.0.3",
    "jquery.sticky": "^0.2.1",
    "node-normalize-scss": "^8.0.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@fortawesome/fontawesome-free": "^5.3.1",
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.24.7",
    "cpy-cli": "^2.0.0",
    "cssnano-cli": "^1.0.5",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "uglify-js": "^3.4.9"
  },
  "scripts": {
    "start": "npm run build",
    "test": "composer test",
    "browsersync": "browser-sync start -p '127.0.0.1:8080' -f '**/*' 'resources/assets/**'",

    "cleanup:css": "rimraf resources/assets/css && mkdir -p resources/assets/css",
    "cleanup:js": "rimraf resources/assets/js && mkdir -p resources/assets/js",
    "cleanup:packages": "rimraf resources/assets/packages && mkdir -p resources/assets/packages",
    "cleanup:img": "rimraf resources/assets/img && mkdir -p resources/assets/img",
    "cleanup:zip": "rimraf snow-monkey.zip",

    "css:style": "node-sass --include-path=node_modules/node-normalize-scss resources/src/css/style.scss -o resources/assets/css && postcss resources/assets/css/style.css -r -c=postcss.config.js && cssnano resources/assets/css/style.css resources/assets/css/style.min.css --no-zindex",
    "css:gutenberg": "node-sass --include-path=node_modules/node-normalize-scss resources/src/css/gutenberg.scss -o resources/assets/css && postcss resources/assets/css/gutenberg.css -r -c=postcss.config.js && cssnano resources/assets/css/gutenberg.css resources/assets/css/gutenberg.min.css --no-zindex",
    "css:editor-style": "node-sass --include-path=node_modules/node-normalize-scss resources/src/css/editor-style.scss -o resources/assets/css && postcss resources/assets/css/editor-style.css -r -c=postcss.config.js && cssnano resources/assets/css/editor-style.css resources/assets/css/editor-style.min.css --no-zindex",
    "css:amp": "node-sass resources/src/css/amp.scss -o resources/assets/css && postcss resources/assets/css/amp.css -r -c=postcss.config.js && cssnano resources/assets/css/amp.css resources/assets/css/amp.min.css --no-zindex",
    "css:dependency:contact-form-7": "node-sass resources/src/css/dependency/contact-form-7/wpcf7.scss -o resources/assets/css/dependency/contact-form-7 && postcss resources/assets/css/dependency/contact-form-7/wpcf7.css -r -c=postcss.config.js && cssnano resources/assets/css/dependency/contact-form-7/wpcf7.css resources/assets/css/dependency/contact-form-7/wpcf7.min.css --no-zindex",
    "css:dependency:elementor": "node-sass resources/src/css/dependency/elementor/elementor.scss -o resources/assets/css/dependency/elementor && postcss resources/assets/css/dependency/elementor/elementor.css -r -c=postcss.config.js && cssnano resources/assets/css/dependency/elementor/elementor.css resources/assets/css/dependency/elementor/elementor.min.css --no-zindex",
    "css:dependency:woocommerce": "node-sass resources/src/css/dependency/woocommerce/woocommerce.scss -o resources/assets/css/dependency/woocommerce && postcss resources/assets/css/dependency/woocommerce/woocommerce.css -r -c=postcss.config.js && cssnano resources/assets/css/dependency/woocommerce/woocommerce.css resources/assets/css/dependency/woocommerce/woocommerce.min.css --no-zindex",
    "css:dependency": "npm-run-all -p css:dependency:*",
    "css:php": "cpy '**/*.php' '../../assets/css' --cwd=resources/src/css --parents",
    "css": "npm run cleanup:css && npm-run-all -p css:*",

    "js:app": "rollup resources/src/js/app.js -c=rollup.config.js && uglifyjs resources/assets/js/app.js -o resources/assets/js/app.min.js -mc",
    "js:customize-control": "rollup resources/src/js/customize-control.js -c=rollup.config.js && uglifyjs resources/assets/js/customize-control.js -o resources/assets/js/customize-control.min.js -mc",
    "js:customize-preview": "rollup resources/src/js/customize-preview.js -c=rollup.config.js && uglifyjs resources/assets/js/customize-preview.js -o resources/assets/js/customize-preview.min.js -mc",
    "js": "npm run cleanup:js && npm-run-all -p js:*",

    "packages:jquery.background-parallax-scroll": "cpy 'jquery.background-parallax-scroll/**' '../resources/assets/packages' --cwd=node_modules --parents",
    "packages:jquery.smoothscroll": "cpy 'jquery.smoothscroll/**' '../resources/assets/packages' --cwd=node_modules --parents",
    "packages:jquery.sticky": "cpy 'jquery.sticky/**' '../resources/assets/packages' --cwd=node_modules --parents",
    "packages:slick-carousel": "cpy 'slick-carousel/**' '../resources/assets/packages' --cwd=node_modules --parents",
    "packages:fontawesome": "cpy 'fontawesome-free/js/brands.min.js' 'fontawesome-free/js/fontawesome.min.js' 'fontawesome-free/js/solid.min.js' '../../resources/assets/packages' --cwd=node_modules/@fortawesome --parents",
    "packages": "npm run cleanup:packages && npm-run-all packages:*",

    "img": "npm run cleanup:img && cpy '**' '../../assets/img' --cwd=resources/src/img --parents",
    "build": "npm run packages && npm-run-all -p js css img",
    "zip:pack": "composer install --no-dev && rsync -a --exclude='.*' resources/ snow-monkey",
    "zip:archive": "zip -9 -qmr snow-monkey.zip snow-monkey",
    "zip": "npm run cleanup:zip && npm run zip:pack && npm run zip:archive"
  }
}
